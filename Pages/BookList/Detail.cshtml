        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ModifiedDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ModifiedDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-7">

            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>




