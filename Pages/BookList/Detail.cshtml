@page
@model BookListWeb.Pages.BookList.DetailModel
@{
    ViewData["Title"] = "Detail";
}


<h2 class="text-info">Details</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.PageCount"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.PageCount" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Genre"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Genre" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.SubTitle"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.SubTitle" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Edition"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Edition" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Publisher"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Publisher" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Photo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Photo" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.CreatedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.CreatedBy" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ModifiedBy"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ModifiedBy" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.CreatedDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.CreatedDate" class="form-control" />
